extends ../layout/layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")


block content 
    main.product-body
        form.add-product-form(action=`/admin/save-edited-product/${prods.id}` method="POST")
            h3 Edit this Product
            label(for="name" type="text") Product Name
            input.add-product-entry(type="text"  name="name" required id="name" value=`${prods.name}`)
            label(for="description" type="text") Product Description
            textarea.product__description(name="description" placeholder="Describe the product" required id="description"  cols="30" rows="10" maxLength="120") #{prods.description} 
            label(for="price" type="text") Product Price
            input.add-product-entry(type="text"  required name="price" id="price" step="0.01" value=`${prods.price}`)
            label(for="image" type="text") Product Image Url
            input.add-product-entry(type="text" required name="image" id="image" value=`${prods.image}`)
            a(href="/admin/save-edited-product")
                button.add-product-btn Save Changes
            input(type="hidden", value=`${prods.id}`, name="productId")